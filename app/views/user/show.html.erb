<h1><%= current_user.name %>'s Reservations</h1>

<%= @reservation_user_id %>

<table class="table">
  <thead>
    <tr>
      <th>User</th>
      <th>Room</th>
      <th>Start Time</th>
      <th>End Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% current_user.reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.user.name %></td>
        <td><%= reservation.room.name %></td>
        <td><%= reservation.start_date_hour %></td>
        <td><%= reservation.end_date_hour %></td>
        <td><%= link_to 'Show', reservation, class: "btn btn-info btn-sm" %></td>
        <td><%= link_to 'Edit', edit_reservation_path(reservation), class: "btn btn-warning btn-sm" %></td>
        <td><%= link_to 'Destroy', reservation, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Reservation', new_reservation_path, class: "btn btn-default" %>
